{
  "name": "@knime/scripting-editor",
  "type": "module",
  "version": "0.0.121",
  "description": "Shared Scripting Editor components for KNIME",
  "repository": {
    "type": "git",
    "url": "https://github.com/knime/knime-core-ui.git",
    "directory": "packages/scripting-editor"
  },
  "author": "KNIME AG, Zurich, Switzerland",
  "license": "See the file license.txt",
  "scripts": {
    "build": "run-p type-check build:lib build:app",
    "build:lib": "vite build",
    "build:lib:watch": "vite build --minify=false --watch",
    "build:app": "vite build --config vite.app.config.ts",
    "dev": "pnpm run dev:knime",
    "dev:knime": "vite --config vite.app.config.ts",
    "dev:browser": "vite --config vite.app.config.ts --mode development.browser",
    "test:unit": "vitest",
    "type-check": "vue-tsc -p tsconfig.vitest.json",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "run-p 'lint:* --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "coverage": "vitest run --coverage",
    "postinstall": "license-check -c"
  },
  "dependencies": {
    "@knime/kds-components": "catalog:",
    "@knime/kds-styles": "catalog:",
    "@knime/styles": "1.15.0",
    "@knime/ui-extension-renderer": "2.4.0",
    "@knime/utils": "1.8.0",
    "@vueuse/core": "13.8.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/xterm": "^6.0.0",
    "handlebars": "4.7.8",
    "splitpanes": "3.1.5",
    "vscode-languageserver-protocol": "3.17.5"
  },
  "devDependencies": {
    "@knime/core-ui": "workspace:*",
    "@knime/components": "1.43.0",
    "@knime/eslint-config": "9.1.3",
    "@knime/licenses": "1.4.0",
    "@knime/ui-extension-service": "2.6.0",
    "@tsconfig/node24": "24.0.3",
    "@types/color-hash": "2.0.0",
    "@types/jsdom": "21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "24.10.0",
    "@types/splitpanes": "2.2.6",
    "@vitejs/plugin-vue": "5.2.4",
    "@vitest/coverage-v8": "2.1.9",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.5.1",
    "consola": "3.4.2",
    "eslint": "9.39.1",
    "eslint-plugin-vue": "10.3.0",
    "jsdom": "26.1.0",
    "monaco-editor": "0.45.x",
    "npm-run-all": "4.1.5",
    "postcss-mixins": "9.0.4",
    "postcss-preset-env": "^10.4.0",
    "prettier": "3.6.2",
    "stylelint": "16.25.0",
    "ts-xor": "1.3.0",
    "vite": "5.4.19",
    "vite-plugin-css-injected-by-js": "3.5.2",
    "vite-plugin-dts": "4.5.4",
    "vite-svg-loader": "5.1.0",
    "vitest": "2.1.9",
    "vue": "catalog:",
    "vue-tsc": "3.0.4"
  },
  "peerDependencies": {
    "@knime/components": "1.43.0",
    "@knime/ui-extension-service": "2.6.0",
    "monaco-editor": "0.45.x",
    "vue": "catalog:"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "exports": {
    ".": "./dist/main.js",
    "./loading": "./dist/loading.js",
    "./parameters": "./dist/parameters.js",
    "./scripting-service-browser-mock": "./dist/scripting-service-browser-mock.js",
    "./settings-service-browser-mock": "./dist/settings-service-browser-mock.js",
    "./initial-data-service-browser-mock": "./dist/initial-data-service-browser-mock.js"
  },
  "engines": {
    "node": "24.x"
  }
}
