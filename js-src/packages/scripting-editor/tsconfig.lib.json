{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "lib/**/*"],
  "exclude": ["**/__tests__/*", "**/__mocks__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../core-ui/src/*"],
      "@s/*": ["./src/*"]
    },
    "strict": true,
    "allowJs": true,
    // TODO: enable this again. Fails due to checks for .vue files inside node_modules
    "noImplicitAny": false,
    "noEmit": true
  }
}
