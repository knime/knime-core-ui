{
  "$schema": "mock.def.json",
  "result": {
    "name": "File Chooser Inputs",
    "data": {
      "view": {
        "multiFile": {
          "path": {
            "path": "",
            "fsCategory": "",
            "timeout": 0
          },
          "filterMode": "FILES_IN_FOLDERS",
          "filters": {
            "someFilterValue": "file"
          },
          "includeSubfolders": false
        }
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "view": {
          "type": "object",
          "properties": {
            "multiFile": {
              "type": "object",
              "properties": {
                "path": {
                  "title": "Source",
                  "description": "In this demo, when selecting folders, every string that contains 'error' will lead to an <b>error result</b> while every other string will lead to a <b>success result</b>. In a success result case, the result is <b>empty</b> if the path contains 'empty'.",
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "fsCategory": {
                      "type": "string"
                    },
                    "timeout": {
                      "type": "integer"
                    }
                  }
                },
                "filterMode": {
                  "type": "string",
                  "title": "Mode",
                  "oneOf": [
                    {
                      "const": "FILE",
                      "title": "File"
                    },
                    {
                      "const": "FOLDER",
                      "title": "Folder"
                    },
                    {
                      "const": "FILES_IN_FOLDERS",
                      "title": "Files in folders"
                    },
                    {
                      "const": "FOLDERS",
                      "title": "Folders"
                    },
                    {
                      "const": "FILES_AND_FOLDERS",
                      "title": "Files and folders"
                    },
                    {
                      "const": "WORKFLOW",
                      "title": "Workflow"
                    }
                  ]
                },
                "filters": {
                  "type": "object",
                  "properties": {
                    "someFilterValue": {
                      "title": "Must be included in path string",
                      "description": "E.g. set to 'file' to only show paths that include the string 'file'",
                      "type": "string"
                    }
                  }
                },
                "includeSubfolders": {
                  "title": "Include subfolders",
                  "type": "boolean"
                }
              },
              "default": {
                "path": {
                  "path": "",
                  "fsCategory": "",
                  "timeout": 0
                },
                "filterMode": "FILE",
                "filters": {
                  "someFilterValue": "file"
                },
                "includeSubfolders": false
              }
            }
          }
        }
      }
    },
    "ui_schema": {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/view/properties/multiFile",
          "options": {
            "format": "multiFileChooser",
            "isLocal": true,
            "possibleFilterModes": [
              "FILE",
              "FOLDER",
              "FILES_IN_FOLDERS",
              "FOLDERS",
              "FILES_AND_FOLDERS"
            ],
            "filters": {
              "classId": "someClassIdentifier",
              "uiSchema": {
                "type": "Section",
                "label": "My Filter",
                "elements": [
                  {
                    "type": "Control",
                    "scope": "#/properties/someFilterValue"
                  }
                ]
              }
            }
          }
        }
      ]
    },
    "flowVariableSettings": {}
  }
}
