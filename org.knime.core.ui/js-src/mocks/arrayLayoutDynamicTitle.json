{
  "$schema": "mock.def.json",
  "result": {
    "name": "Array Layout",
    "data": {
      "view": {
        "whatYouShouldSee": "Every element should have different title and subtitle and those should move with the elements when sorting the items.",
        "dummyArrayLayout": [
          {
            "doubleInput": 1,
            "stringInput": "label 1",
            "radioInput": "OPTION1",
            "title": "A",
            "subTitle": "subA"
          },
          {
            "doubleInput": 2,
            "stringInput": "label 2",
            "radioInput": "OPTION2",
            "title": "B",
            "subTitle": "subB"
          },
          {
            "doubleInput": 3,
            "stringInput": "label 3",
            "radioInput": "OPTION3",
            "title": "C",
            "subTitle": "subC"
          }
        ]
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "view": {
          "type": "object",
          "properties": {
            "whatYouShouldSee": {
              "type": "string"
            },
            "dummyArrayLayout": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "doubleInput": {
                    "type": "number",
                    "title": "Double",
                    "default": 0
                  },
                  "stringInput": {
                    "type": "string",
                    "title": "String",
                    "default": ""
                  },
                  "radioInput": {
                    "oneOf": [
                      {
                        "const": "OPTION1",
                        "title": "Option 1"
                      },
                      {
                        "const": "OPTION2",
                        "title": "Option 2"
                      },
                      {
                        "const": "OPTION3",
                        "title": "Option 3"
                      }
                    ],
                    "title": "Radio input",
                    "default": "OPTION1"
                  },
                  "title": {
                    "type": "string"
                  },
                  "subTitle": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "ui_schema": {
      "elements": [
        {
          "type": "Section",
          "label": "Section headline",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/view/properties/whatYouShouldSee",
              "label": "What you should see here:",
              "options": {
                "format": "textArea",
                "rows": 5
              }
            },
            {
              "type": "Control",
              "scope": "#/properties/view/properties/dummyArrayLayout",
              "options": {
                "addButtonText": "Add dummy element",
                "elementTitleProvider": "myTitleProvider",
                "elementSubTitleProvider": "mySubTitleProvider",
                "showSortButtons": true,
                "showEditButton": true,
                "detail": {
                  "horizontalLayout": {
                    "type": "HorizontalLayout",
                    "elements": [
                      {
                        "type": "Control",
                        "scope": "#/properties/stringInput"
                      },
                      {
                        "type": "Control",
                        "scope": "#/properties/doubleInput"
                      }
                    ]
                  },
                  "radioInput": {
                    "type": "Control",
                    "scope": "#/properties/radioInput",
                    "options": {
                      "format": "radio",
                      "radioLayout": "horizontal"
                    }
                  }
                }
              }
            }
          ]
        }
      ]
    },
    "flowVariableSettings": {},
    "globalUpdates": [
      {
        "trigger": {
          "id": "after-open-dialog"
        },
        "triggerInitially": true,
        "dependencies": [
          "#/properties/view/properties/dummyArrayLayout/items/properties/title",
          "#/properties/view/properties/dummyArrayLayout/items/properties/subTitle"
        ]
      }
    ]
  }
}
