{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "**/*", "**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "allowJs": true,
    "jsx": "preserve"
  }
}
