{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "webapps-common/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "webapps-common/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "verbatimModuleSyntax": false
  }
}
