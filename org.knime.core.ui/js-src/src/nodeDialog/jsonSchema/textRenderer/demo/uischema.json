{
  "$schema": "../uischema.def.json",
  "type": "Control",
  "scope": "#/properties/text",
  "options": {
    "placeholder": "Enter text here",
    "validation": {
      "minLength": {
        "parameters": {
          "minLength": 1
        },
        "errorMessage": "This field is required"
      },
      "pattern": {
        "parameters": {
          "pattern": "^\\w+$"
        },
        "errorMessage": "Only alphanumeric characters are allowed."
      }
    }
  }
}
