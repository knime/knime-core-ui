{
  "name": "knime-core-ui",
  "version": "0.1.0",
  "description": "Vue-based view components for KNIME",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:NodeDialog": "npm run _dev NodeDialog 3333",
    "dev:NodeDialog:standalone": "vite",
    "dev:TableView": "npm run _dev TableView 4000",
    "dev:TextView": "npm run _dev TextView 4000",
    "dev:ImageView": "npm run _dev ImageView 4000",
    "_dev": "run-p \"_dev:build -- --mode {1} --watch\" \"_dev:serve -- --port {2}\" --",
    "_dev:build": "vite build",
    "_dev:serve": "vite preview",
    "build": "npm run cleanDist && run-p type-check build:*",
    "build:NodeDialog": "vite build --mode NodeDialog",
    "build:TableView": "vite build --mode TableView",
    "build:DeferredTableView": "vite build --mode DeferredTableView",
    "build:TextView": "vite build --mode TextView",
    "build:ImageView": "vite build --mode ImageView",
    "build:html": "run-p build:html:*",
    "build:html:ImageValueView": "vite build --mode html:ImageValueView",
    "build:html:CodeValueView": "vite build --mode html:CodeValueView",
    "build:html:StringCellView": "vite build --mode html:StringCellView",
    "type-check": "vue-tsc -p tsconfig.vitest.json",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "cleanDist": "rimraf dist",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "audit": "check-audit --omit dev",
    "test:unit": "vitest",
    "test:integration": "vitest --mode integration",
    "coverage": "run-p coverage:*",
    "coverage:unit": "vitest run --coverage ",
    "coverage:integration": "vitest run --coverage --mode integration",
    "prepare": "cd ../.. && husky ./org.knime.core.ui/js-src/.husky",
    "sbom": "npx @cyclonedx/cyclonedx-npm --output-file bom.json --ignore-npm-errors --omit dev",
    "postinstall": "license-check -c"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@floating-ui/vue": "1.0.2",
    "@jsonforms/core": "3.4.0",
    "@jsonforms/vue": "3.4.0",
    "@jsonforms/vue-vanilla": "3.4.0",
    "@knime/components": "1.19.1",
    "@knime/jsonforms": "1.5.14",
    "@knime/knime-ui-table": "0.5.20",
    "@knime/rich-text-editor": "1.3.21",
    "@knime/styles": "1.2.0",
    "@knime/ui-extension-service": "2.1.1",
    "@tiptap/core": "2.1.10",
    "date-fns": "2.29.3",
    "focus-trap-vue": "4.0.2",
    "highlight.js": "11.10.0",
    "lodash-es": "4.17.21",
    "monaco-editor": "0.51.0",
    "tabbable": "6.2.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "1.16.1",
    "@knime/eslint-config": "8.3.0",
    "@knime/licenses": "1.1.0",
    "@knime/ui-extension-renderer": "2.0.13",
    "@knime/utils": "1.3.0",
    "@knime/vue-headless-virtual-scroller": "0.1.3",
    "@tsconfig/node22": "22.0.0",
    "@types/jsdom": "21.1.0",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.10.10",
    "@types/uuid": "9.0.8",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-v8": "2.1.5",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.5.1",
    "consola": "3.2.3",
    "eslint": "8.56.0",
    "flush-promises": "1.0.2",
    "husky": "9.1.4",
    "jsdom": "20.0.3",
    "npm-audit-resolver": "3.0.0-RC.0",
    "npm-run-all": "4.1.5",
    "postcss-mixins": "9.0.4",
    "prettier": "3.0.0",
    "stylelint": "16.14.1",
    "type-fest": "4.3.1",
    "typescript": "5.4.5",
    "vite": "5.4.11",
    "vite-svg-loader": "5.1.0",
    "vitest": "2.1.5",
    "vue": "3.4.27",
    "vue-tsc": "2.1.10"
  },
  "engines": {
    "node": "22.x"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.1"
  }
}
