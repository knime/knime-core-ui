{
  "name": "knime-base-views-vue",
  "version": "0.1.0",
  "description": "Vue-based view components for KNIME",
  "private": true,
  "scripts": {
    "dev:NodeDialog": "concurrently -n server,app -c yellow,blue \"http-server -c-1 --cors -p 3333 dist/ http-server\" \"vite build --mode NodeDialog --watch\"",
    "dev:NodeDialog:standalone": "vite",
    "dev:TableView": "concurrently -n server,app -c yellow,blue \"http-server -c-1 --cors -p 4000 dist/ http-server\" \"vite build --mode TableView --watch\"",
    "build": "npm run cleanDist && npm run build:NodeDialog && npm run build:TableView",
    "cleanDist": "rimraf dist",
    "build:NodeDialog": "npm run prepare-build && vite build --mode NodeDialog",
    "build:TableView": "npm run prepare-build && vite build --mode TableView",
    "prepare-build": "run-p type-check",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.json",
    "lint:css": "stylelint '**/*.{css,vue}'",
    "ci:lint": "run-p lint:*",
    "audit": "check-audit --omit dev",
    "jenkins:lint": "eslint --ext .js,.vue,.json -f json -o target/eslint.json || true; stylelint '**/*.{css,vue}' -f json -o target/stylelint.json || true",
    "jenkins:audit": "check-audit --omit=dev --json > target/audit.json || true",
    "test:unit": "TZ='Europe/Berlin' vitest",
    "coverage": "TZ='Europe/Berlin' vitest run --coverage"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@jsonforms/core": "3.0.0",
    "@jsonforms/vue": "3.0.0",
    "@jsonforms/vue-vanilla": "3.0.0",
    "@knime/knime-ui-table": "0.3.2",
    "@knime/ui-extension-service": "0.4.0",
    "consola": "2.15.3",
    "raf-throttle": "2.0.5",
    "vue": "3.2.45",
    "vue3-click-away": "1.2.4",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@knime/eslint-config": "7.1.1",
    "@types/jsdom": "20.0.1",
    "@types/node": "18.11.2",
    "@vitejs/plugin-vue": "3.2.0",
    "@vitest/coverage-c8": "0.28.3",
    "@vue/test-utils": "2.2.7",
    "@vue/tsconfig": "0.1.3",
    "concurrently": "7.4.0",
    "eslint": "8.25.0",
    "flush-promises": "1.0.2",
    "http-server": "14.1.1",
    "modern-normalize": "1.1.0",
    "npm-audit-resolver": "3.0.0-7",
    "npm-run-all": "4.1.5",
    "stylelint": "14.14.0",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "vite-plugin-css-injected-by-js": "2.1.0",
    "vite-svg-loader": "3.6.0",
    "vitest": "0.25.3",
    "vue-tsc": "1.0.8",
    "vuex": "4.1.0"
  },
  "engines": {
    "node": "18.x"
  },
  "volta": {
    "node": "18.11.0"
  }
}
