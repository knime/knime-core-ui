{
  "name": "knime-base-views-vue",
  "version": "0.1.0",
  "description": "Vue-based view components for KNIME",
  "private": true,
  "scripts": {
    "dev:NodeDialog": "npm run dev NodeDialog 3333",
    "dev:TableView": "npm run dev TableView 4000",
    "dev": "run-s \"dev:build -- --mode {1} -- --watch\" \"dev:serve -- --port {2}\" --",
    "dev:build": "vite build",
    "dev:serve": "vite preview",
    "dev:NodeDialog:standalone": "vite",
    "build": "npm run cleanDist && run-p type-check build:*",
    "build:NodeDialog": "vite build --mode NodeDialog",
    "build:TableView": "vite build --mode TableView",
    "type-check": "vue-tsc --noEmit",
    "cleanDist": "rimraf dist",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.json",
    "lint:css": "stylelint '**/*.{css,vue}'",
    "ci:lint": "run-p lint:*",
    "audit": "check-audit --omit dev",
    "jenkins:lint": "eslint --ext .js,.vue,.json -f json -o target/eslint.json || true; stylelint '**/*.{css,vue}' -f json -o target/stylelint.json || true",
    "jenkins:audit": "check-audit --omit=dev --json > target/audit.json || true",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@jsonforms/core": "3.0.0",
    "@jsonforms/vue": "3.0.0",
    "@jsonforms/vue-vanilla": "3.0.0",
    "@knime/knime-ui-table": "0.3.3",
    "@knime/ui-extension-service": "0.4.0",
    "consola": "2.15.3",
    "raf-throttle": "2.0.5",
    "vue": "3.2.47",
    "vue3-click-away": "1.2.4",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@knime/eslint-config": "7.1.1",
    "@types/jsdom": "21.1.0",
    "@types/node": "18.14.2",
    "@vitejs/plugin-vue": "4.0.0",
    "@vitest/coverage-c8": "0.28.4",
    "@vue/test-utils": "2.3.0",
    "@vue/tsconfig": "0.1.3",
    "eslint": "8.35.0",
    "flush-promises": "1.0.2",
    "modern-normalize": "1.1.0",
    "npm-audit-resolver": "3.0.0-7",
    "npm-run-all": "4.1.5",
    "stylelint": "14.14.0",
    "typescript": "4.9.5",
    "vite": "4.1.4",
    "vite-plugin-css-injected-by-js": "3.0.1",
    "vite-svg-loader": "4.0.0",
    "vitest": "0.29.1",
    "vue-tsc": "1.2.0",
    "vuex": "4.1.0"
  },
  "engines": {
    "node": "18.x"
  },
  "volta": {
    "node": "18.11.0"
  }
}
