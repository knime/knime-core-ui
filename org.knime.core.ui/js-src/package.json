{
  "name": "knime-core-ui",
  "version": "0.1.0",
  "description": "Vue-based view components for KNIME",
  "private": true,
  "scripts": {
    "dev:NodeDialog": "npm run _dev NodeDialog 3333",
    "dev:NodeDialog:standalone": "vite",
    "dev:TableView": "npm run _dev TableView 4000",
    "dev:TextView": "npm run _dev TextView 4000",
    "_dev": "run-p \"_dev:build -- --mode {1} --watch\" \"_dev:serve -- --port {2}\" --",
    "_dev:build": "vite build",
    "_dev:serve": "vite preview",
    "build": "npm run cleanDist && run-p type-check build:*",
    "build:NodeDialog": "vite build --mode NodeDialog",
    "build:TableView": "vite build --mode TableView",
    "build:DeferredTableView": "vite build --mode DeferredTableView",
    "build:TextView": "vite build --mode TextView",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "cleanDist": "rimraf dist",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "audit": "check-audit --omit dev",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "cd ../.. && husky install ./org.knime.core.ui/js-src/.husky"
  },
  "license": "UNLICENSED",
  "author": "KNIME AG, Zurich, Switzerland",
  "dependencies": {
    "@jsonforms/core": "3.0.0",
    "@jsonforms/vue": "3.0.0",
    "@jsonforms/vue-vanilla": "3.0.0",
    "@knime/knime-ui-table": "0.3.30",
    "@knime/ui-extension-service": "0.15.0",
    "uuid": "9.0.0",
    "vue3-click-away": "1.2.4",
    "webapps-common": "file:webapps-common"
  },
  "devDependencies": {
    "@knime/eslint-config": "8.0.7",
    "@types/jsdom": "21.1.0",
    "@types/node": "18.14.2",
    "@vitejs/plugin-vue": "4.0.0",
    "@vitest/coverage-c8": "0.29.2",
    "@vue/test-utils": "2.3.0",
    "@vue/tsconfig": "0.1.3",
    "consola": "2.15.3",
    "eslint": "8.45.0",
    "flush-promises": "1.0.2",
    "husky": "8.0.3",
    "jsdom": "20.0.3",
    "npm-audit-resolver": "3.0.0-7",
    "npm-run-all": "4.1.5",
    "postcss-mixins": "9.0.4",
    "prettier": "3.0.0",
    "stylelint": "15.10.2",
    "typescript": "4.9.5",
    "vite": "4.1.4",
    "vite-plugin-css-injected-by-js": "3.0.1",
    "vite-svg-loader": "4.0.0",
    "vitest": "0.29.2",
    "vue": "3.3.4",
    "vue-tsc": "1.2.0",
    "vuex": "4.1.0"
  },
  "engines": {
    "node": "18.x"
  },
  "volta": {
    "node": "18.14.2"
  }
}
