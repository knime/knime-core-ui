{
  "name": "@knime/scripting-editor",
  "type": "module",
  "version": "0.0.115",
  "description": "Shared Scripting Editor components for KNIME",
  "author": "KNIME AG, Zurich, Switzerland",
  "license": "See the file license.txt",
  "scripts": {
    "build": "run-p type-check build-only",
    "build-only": "vite build",
    "build-watch": "vite build --minify=false --watch",
    "demo": "vite --config vite.demo.config.ts",
    "test:unit": "vitest",
    "type-check": "vue-tsc -p tsconfig.vitest.json",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "audit": "npm audit --omit dev",
    "coverage": "vitest run --coverage",
    "postinstall": "license-check -c"
  },
  "dependencies": {
    "@knime/kds-components": "0.0.8",
    "@knime/kds-styles": "0.0.8",
    "@knime/styles": "1.10.0",
    "@knime/ui-extension-renderer": "2.3.34",
    "@knime/utils": "1.5.5",
    "@vueuse/core": "13.8.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/xterm": "^5.5.0",
    "handlebars": "4.7.8",
    "splitpanes": "3.1.5",
    "vscode-languageserver-protocol": "3.17.5"
  },
  "devDependencies": {
    "@knime/components": "1.41.5",
    "@knime/eslint-config": "9.1.3",
    "@knime/ui-extension-service": "2.4.1",
    "@knime/licenses": "1.3.2",
    "@tsconfig/node22": "22.0.2",
    "@types/color-hash": "2.0.0",
    "@types/jsdom": "21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22.16.0",
    "@types/splitpanes": "2.2.6",
    "@vitejs/plugin-vue": "5.2.4",
    "@vitest/coverage-v8": "2.1.9",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.5.1",
    "consola": "3.4.2",
    "eslint": "9.30.1",
    "eslint-plugin-vue": "10.3.0",
    "jsdom": "26.1.0",
    "monaco-editor": "0.45.x",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "stylelint": "16.21.1",
    "ts-xor": "1.3.0",
    "vite": "5.4.19",
    "vite-plugin-css-injected-by-js": "3.5.2",
    "vite-plugin-dts": "4.5.4",
    "vite-svg-loader": "5.1.0",
    "vitest": "2.1.9",
    "vue-tsc": "3.0.4",
    "vue": "3.5.18"
  },
  "peerDependencies": {
    "@knime/components": "1.38.0",
    "@knime/ui-extension-service": "2.4.1",
    "monaco-editor": "0.45.x",
    "vue": "3.5.17"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "exports": {
    ".": "./dist/main.js",
    "./loading": "./dist/loading.js",
    "./scripting-service-browser-mock": "./dist/scripting-service-browser-mock.js",
    "./settings-service-browser-mock": "./dist/settings-service-browser-mock.js",
    "./initial-data-service-browser-mock": "./dist/initial-data-service-browser-mock.js"
  },
  "engines": {
    "node": "22.x"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.1"
  }
}
