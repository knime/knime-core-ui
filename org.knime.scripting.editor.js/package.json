{
  "name": "@knime/scripting-editor",
  "type": "module",
  "version": "0.0.65",
  "description": "Shared Scripting Editor components for KNIME",
  "author": "KNIME AG, Zurich, Switzerland",
  "license": "See the file license.txt",
  "scripts": {
    "build": "run-p type-check build-only",
    "build-only": "vite build",
    "build-watch": "vite build --minify=false --watch",
    "test:unit": "vitest",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "run-p 'lint:* -- --fix'",
    "lint:js": "eslint . --cache --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "lint:css": "stylelint --cache '**/*.{css,vue}'",
    "ci:lint-format": "run-p ci:lint:* format:check -c",
    "ci:lint:js": "npm run lint:js && npm run lint:js -- -f json -o test-results/eslint.json",
    "ci:lint:css": "npm run lint:css -- -f json -o test-results/stylelint.json",
    "audit": "npm audit --omit dev",
    "coverage": "vitest run --coverage",
    "install-husky": "cd .. && husky ./org.knime.scripting.editor.js/.husky"
  },
  "dependencies": {
    "@knime/ui-extension-service": "0.32.0",
    "@vueuse/core": "10.9.0",
    "handlebars": "4.7.8",
    "splitpanes": "3.1.5",
    "vscode-languageserver-protocol": "3.17.5",
    "vue": "3.x",
    "webapps-common": "file:webapps-common",
    "xterm": "5.3.0",
    "xterm-addon-fit": "0.8.0",
    "xterm-addon-unicode11": "0.6.0"
  },
  "devDependencies": {
    "@knime/eslint-config": "8.0.14",
    "@rushstack/eslint-patch": "1.9.0",
    "@tsconfig/node18": "18.2.4",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.11.30",
    "@types/splitpanes": "2.2.6",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-v8": "1.4.0",
    "@vue/eslint-config-prettier": "9.0.0",
    "@vue/eslint-config-typescript": "13.0.0",
    "@vue/test-utils": "2.4.5",
    "@vue/tsconfig": "0.5.1",
    "consola": "2.15.3",
    "eslint": "8.57.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-vue": "9.24.0",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.2.5",
    "stylelint": "16.3.1",
    "ts-xor": "1.3.0",
    "typescript": "5.4.3",
    "vite": "5.2.6",
    "vite-plugin-css-injected-by-js": "3.5.0",
    "vite-plugin-dts": "3.8.1",
    "vite-svg-loader": "5.1.0",
    "vitest": "1.4.0",
    "vue-tsc": "2.0.7"
  },
  "peerDependencies": {
    "monaco-editor": "0.45.x",
    "vue": "3.x"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "exports": {
    ".": "./dist/main.js",
    "./scripting-service-browser-mock": "./dist/scripting-service-browser-mock.js"
  },
  "engines": {
    "node": "20.x"
  },
  "volta": {
    "node": "20.11.1"
  }
}
