{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "lib/**/*",
    "node_modules/@knime/**/*",
    "demo/**/*",
    "demo/**/*.vue"
  ],
  "exclude": ["**/__tests__/*", "**/__mocks__/*"],
  "compilerOptions": {
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "allowJs": true
  }
}
